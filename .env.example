# Star Power Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (Supabase or PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Google Sheets API (for card data loading)
# Option 1: Service account JSON file path
GOOGLE_SERVICE_ACCOUNT_FILE=../resources/google_service_account.json

# Option 2: Service account JSON as environment variable (for Railway)
# GOOGLE_CREDENTIALS={"type":"service_account","project_id":"..."}

# Google Spreadsheet ID
GOOGLE_SPREADSHEET_ID=1CuN3CzMUi3YkNAEWqDReA2UoiKqvNBYu5WA_HzlAOHQ

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379

# JWT Secret (for authentication, future use)
# SECRET_KEY=your-secret-key-here
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
# ENVIRONMENT=production
